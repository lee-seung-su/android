<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".TodayMatch">


    <ImageView
        android:id="@+id/fighting_message_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/simpson_image2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/fighting_likes_num_text"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/fighting_likes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@android:drawable/btn_star_big_on" />

        <EditText

            android:id="@+id/fighting_message_edit"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>



    <TextView

        android:layout_marginTop="10dp"
        android:id="@+id/fighting_message_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/fighting_message_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="처음으로"
        android:textSize="30dp" />

</LinearLayout>