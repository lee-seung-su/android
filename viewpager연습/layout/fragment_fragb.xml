<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragb">

    <TextView
        android:id="@+id/fragb_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Instagram"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/fragb_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lion" />

        <TextView
            android:id="@+id/fragb_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="seungsu2021"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/fragb_viewpager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragb_like_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:background="@android:drawable/btn_star"
            android:backgroundTint="@color/white" />

        <Button
            android:id="@+id/fragb_comment_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/ic_menu_edit"
            android:backgroundTint="@color/green"
            android:text="C" />

        <Button
            android:id="@+id/fragb_send_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/ic_menu_send"
            android:text="S" />

        <EditText
            android:id="@+id/fragb_send_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textSize="20dp"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/fragb_like_num"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragb_comments"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="바보야23423423423\n멍충아234324234234\n와아아아234234234\n바보야234234234\n 멍충아23432423\n 와아아아234324324\n"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:visibility="gone" />


</LinearLayout>