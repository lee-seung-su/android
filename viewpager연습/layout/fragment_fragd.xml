<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/fragd_web_edit"
            android:textSize="20dp"
            android:inputType="textUri"
            android:imeOptions="actionDone"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이동"
            android:id="@+id/fragd_web_button"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="네이버"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragd_naver_button"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/fragd_phone_edit"
            android:textSize="15dp"
            android:inputType="phone"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="dial"
            android:id="@+id/fragd_dial_button"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragd_call_button"
            android:text="call"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragd_sms_button"
            android:text="sms"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/fragd_phone_edit_watcher"
            android:textSize="30dp"
            android:singleLine="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/enable_button"
            android:text="Enable"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/disable_button"
            android:text="Disable"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


</LinearLayout>