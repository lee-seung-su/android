<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".ShowCalendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/back_pic" />

        <TextView
            android:id="@+id/calendar_title"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/calendar_setting_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting_button" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView

            android:id="@+id/show_calendar_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/show_animation_dog"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dog_run_animation" />

            <ImageView
                android:id="@+id/show_animation_man"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/run_animation" />
        </LinearLayout>


        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:layout_marginTop="160dp"
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            app:mcv_selectionColor="@color/light_pink"

            >

        </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="500dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alarm_time_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/secondary_text_light"
                android:gravity="center"
                android:text="  알림 시간 수정 "
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/no_disturb_time_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@android:color/secondary_text_light"
                android:text="방해금지 시간 수정"
                app:cornerRadius="10dp" />


        </LinearLayout>
    </FrameLayout>


</LinearLayout>