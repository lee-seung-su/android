<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#D6C48B"
                android:centerColor="#D6C48B"
                android:endColor="#D6C48B"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp"
                />
        </shape>
    </item>
</selector>