<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/no_disturb_layout"
    android:background="@color/pink"
    tools:context=".HabitNoDisturbTime">

    <TextView
        android:id="@+id/habit_no_disturb_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방해금지시간을 설정하세요"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇시부터?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/habit_no_disturb_from_question"
            />
        <TextView
            android:clickable="true"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/habit_no_disturb_from_answer"
            android:hint="23시"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇시까지?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/habit_no_disturb_to_question"
            />
        <TextView
            android:clickable="true"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/habit_no_disturb_to_answer"
            android:hint="8시"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:layout_marginTop="178dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장하기"
        android:id="@+id/habit_no_disturb_save_btn"
        android:layout_gravity="center_horizontal"
        />
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:id="@+id/habit_no_disturb_back_btn"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>