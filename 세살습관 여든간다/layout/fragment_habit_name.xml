<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".HabitName">

    <TextView
        android:id="@+id/habit_name_question"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만들고싶은 습관을 써주세요 (세분화)"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:gravity="center_horizontal"
        android:id="@+id/habit_name_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="물 2L 마시기 X\n물 200ml 마시기 O"
        android:maxLines="1"
        android:textColorHint="@color/light_gray"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/habit_count_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="횟수 선택"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇 번"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:id="@+id/habit_count_question"
            />

        <EditText
            android:gravity="right"
            android:id="@+id/habit_count_answer"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="6"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Spinner
            android:background="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/habit_count_unit_spinner"
            />
    </LinearLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스톱워치 사용"
        android:textColor="@color/black"
        android:id="@+id/enable_stopwatch_checkBox"
        />
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음으로"
        android:id="@+id/habit_name_next_btn"
        android:layout_gravity="center_horizontal"
        />
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:id="@+id/habit_name_back_btn"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>