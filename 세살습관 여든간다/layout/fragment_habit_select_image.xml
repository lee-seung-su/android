<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".HabitSelectImage">

    <TextView
        android:id="@+id/habit_select_Image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="달력에 표시할 이미지 선택"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/habit_select_image_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/spinner_selected_image"
        android:layout_gravity="center_horizontal"
        />
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:id="@+id/habit_select_image_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="습관 보러 가기" />
    <Button
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:id="@+id/habit_select_image_back_btn"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>