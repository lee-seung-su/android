<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/alarm_layout"
    android:background="@color/pink"
    tools:context=".HabitAlarm">

    <TextView
        android:id="@+id/habit_alarm_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림을 설정해주세요"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇시부터?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/habit_alarm_question_hour"
            />
        <TextView
            android:clickable="true"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/habit_alarm_answer_hour"
            android:hint="13시"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇 번?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/habit_alarm_question_count"
            />
        <EditText
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/habit_alarm_answer_count"
            android:hint="13시"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/habit_alarm_repeat_title"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="반복일을 설정할까요?"
            android:textColor="@color/black"
            android:textSize="20dp"

            />
        <CheckBox
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_repeat_checkbox"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="며칠마다?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/habit_alarm_repeat_question"
            />
        <EditText
            android:visibility="invisible"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/habit_alarm_repeat_answer"
            android:hint="5일"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Button
        app:cornerRadius="10dp"
        android:id="@+id/habit_alarm_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:text="저장하기" />

    <Button
        app:cornerRadius="10dp"
        android:id="@+id/habit_alarm_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:text="뒤로가기" />



</LinearLayout>