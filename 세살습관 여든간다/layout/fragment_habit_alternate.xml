<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".HabitAlternate">



    <TextView
        android:id="@+id/habit_alternate_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차선책 선택"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차선책 선택하시겠어요?"
        android:id="@+id/habit_alternate_checkbox"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="85dp"
        >
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="횟수"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/habit_alternate_question"
            />
        <EditText
            android:visibility="invisible"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/habit_alternate_answer"
            android:hint="목표 : 6번"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            />
        <Spinner
            android:visibility="invisible"
            android:background="@color/green"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/habit_alternate_unit_spinner"
            />
    </LinearLayout>

    <Button
        app:cornerRadius="10dp"
        android:id="@+id/habit_alternate_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="145dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:text="다음으로" />

    <Button
        app:cornerRadius="10dp"
        android:id="@+id/habit_alternate_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/secondary_text_light"
        android:text="뒤로가기" />

</LinearLayout>