<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    tools:context=".ShowHabit">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/habit_recycler_view"
        />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 습관이 없습니다.\n새로운 습관을 만들어볼까요?"
        android:id="@+id/show_habit_title"
        android:textColor="@color/black"
        android:visibility="visible"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/show_habit_add_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/secondary_text_light"

        android:text="+ 나만의 습관 추가"
        android:textSize="18dp"
        app:cornerRadius="10dp" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:visibility="invisible"
            android:layout_marginTop="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/efab1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="자주 쓰는 습관"
            android:gravity="center"
            android:backgroundTint="@color/light_blue_200"
            android:src="@android:drawable/ic_input_add" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:id="@+id/efab2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="커스텀 습관"
            android:backgroundTint="@color/light_blue_200"
            android:src="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus" />






</LinearLayout>